<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- 1. 顶部 Tab 栏 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space Stations"
            android:icon="@drawable/space_station_icon" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flights"
            android:icon="@drawable/rocket_icon" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rovers"
            android:icon="@drawable/rover_icon" />

    </com.google.android.material.tabs.TabLayout>

    <!-- 2. 中间内容区 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toTopOf="@id/depart_button">

        <!-- 2.1 “DCA ↔ MARS” 区域 -->
        <LinearLayout
            android:id="@+id/route_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DCA"
                android:textSize="20sp"
                android:padding="16dp"
                android:background="#66BB6A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/double_arrows"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARS"
                android:textSize="20sp"
                android:padding="16dp"
                android:background="#66BB6A" />

        </LinearLayout>

        <!-- 2.2 “One Way” 开关 -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/one_way_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Way"
            app:layout_constraintTop_toBottomOf="@id/route_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp" />

        <!-- 2.3 “1 Traveller” 文本 -->
        <TextView
            android:id="@+id/traveller_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Traveller"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/one_way_switch"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp" />

        <!-- 2.4 星球图标 -->
        <ImageView
            android:id="@+id/galaxy_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/galaxy"
            app:layout_constraintTop_toBottomOf="@id/traveller_text"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp" />

        <!-- 2.5 火箭图标 -->
        <ImageView
            android:id="@+id/rocket_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/rocket_icon"
            app:layout_constraintTop_toBottomOf="@id/traveller_text"
            app:layout_constraintStart_toEndOf="@id/galaxy_image"
            android:padding="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 3. 底部 “DEPART” 按钮 -->
    <Button
        android:id="@+id/depart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEPART"
        android:background="#66BB6A"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>